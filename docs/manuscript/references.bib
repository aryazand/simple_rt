	keywords = {United States, Drug administration, Finance, Health economics, Insurance, Medicare, Payment, Pharmacoeconomics},
	pages = {e1003013},
	file = {Snapshot:/home/arya/Zotero/storage/V6WTAFTB/article.html:text/html;Full Text PDF:/home/arya/Zotero/storage/CUDK92K4/Cai et al. - 2020 - Projected costs of single-payer healthcare financi.pdf:application/pdf}
