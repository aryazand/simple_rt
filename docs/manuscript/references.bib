	keywords = {Humans, Animals, Chromatin Immunoprecipitation, Transcription Factors, Binding Sites, High-Throughput Nucleotide Sequencing, Regulatory Elements, Transcriptional, Sequence Analysis, DNA, Mice, Models, Biological, Protein Array Analysis, Oligonucleotides, SELEX Aptamer Technique},
