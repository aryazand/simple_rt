	keywords = {Animals, Transcription Factors, Binding Sites, Protein Binding, Models, Molecular, Xenopus, Nucleosomes, Protein Structure, Secondary, Chickens, Binding, Competitive, DNA Restriction Enzymes, Drug Synergism},
	pages = {634--646}
}

