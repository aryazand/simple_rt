	keywords = {Algorithms, Transcription Factors, Binding Sites, Models, Genetic, Pattern Recognition, Automated, Software, Computational Biology, Position-Specific Scoring Matrices, Models, Statistical, Genes, Fungal, Nucleotides},
	pages = {e9722}
}

@article{zhao_improved_2012,
	title = {Improved models for transcription factor binding site identification using nonindependent interactions},
