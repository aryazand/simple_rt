	file = {Snapshot:/home/arya/Zotero/storage/X5KK63RC/2674671.html:text/html;Full Text PDF:/home/arya/Zotero/storage/RGMW9P8V/Papanicolas et al. - 2018 - Health Care Spending in the United States and Othe.pdf:application/pdf}
}

