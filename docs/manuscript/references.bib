	keywords = {DNA, Fungal, Transcription Factors, Binding Sites, Protein Binding, DNA-Binding Proteins, DNA, Saccharomyces cerevisiae, Protein Array Analysis, Saccharomyces cerevisiae Proteins, Biophysics, Biophysical Phenomena, Thermodynamics, Likelihood Functions, Models, Chemical},
