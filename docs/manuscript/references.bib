	author = {Choubey, Sandeep and Kondev, Jane and Sanchez, Alvaro},
	month = nov,
	year = {2015},
	pmid = {26544860},
	pmcid = {PMC4636183},
	keywords = {Algorithms, Transcription, Genetic, Models, Genetic, RNA, Yeasts, DNA-Directed RNA Polymerases, Cytoplasm, Computational Biology},
	pages = {e1004345}
}

